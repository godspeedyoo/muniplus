


<div class="container">
  <div class="sharktank eight offset-by-two columns">
    <h3><%= @title %></h3>
    <table class="hidden">
    <tr>
      <th>Description</th>
      <th>Value</th>
    </tr>
    <% @stop.each_pair do |k, v| %>
    <tr>
      <td><%= k %></td>
      <td id="<%= k %>"><%= v %></td>
    </tr>
    <% end %>
    </table>

    <br>
    <div class="clock"></div>
    <br>
    <div class="clock_2"></div>

    <div id="map-canvas">
    </div>
  </div>
</div>

<div class="basstank four offset-by-four columns">
  <thead>
  <table class=>
    <tr>
      <th><button data-direction="<%= @direction %>" data-route-number="<%= @route_number %>" data-title="<%= @title %>">Refresh Predictions</button></th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @stop.predictions.each do |prediction| %>
    <tr>
      <td id="prediction_<%= i %>" data-time="<%= prediction.seconds %>"><%= prediction.seconds %></td>
      <% i += 1 %>
    </tr>
    <% end %>
  </tbody>
  <table>
</div>
